<Window x:Class="CiccioGest.Presentation.AppWpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CiccioGest.Presentation.AppWpf.View"
        mc:Ignorable="d"
        Width="640"
        Height="400"
        Title="CiccioGest"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid x:Name="LayoutRoot">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--<local:MenuControl Grid.Row="0" Height="Auto"/>-->
        <Frame Grid.Row="0" x:Name="ciccio" Source="MenuControl.xaml" NavigationUIVisibility="Hidden" />
        <Frame Grid.Row="1" x:Name="pippo" Source="HomeView.xaml" NavigationUIVisibility="Hidden" />

    </Grid>
</Window>
