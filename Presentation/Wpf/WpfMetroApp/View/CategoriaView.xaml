<Page x:Class="CiccioGest.Presentation.WpfMetroApp.View.CategoriaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:viewmodel="clr-namespace:CiccioGest.Presentation.WpfBackend.ViewModel;assembly=WpfBackend"
      d:DataContext="{d:DesignInstance Type=viewmodel:CategoriaViewModel}"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Background="White"
      Title="Categorie">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand, Mode=OneWay}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel>

            <TextBlock
                Text="Categoria"
                FontSize="28"
                DockPanel.Dock="Left"
                Margin="5,5,5,5"/>

            <Grid
                DockPanel.Dock="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label
                    Content="Nome:"
                    VerticalAlignment="Center"
                    FontSize="14"/>
                <TextBox
                    Grid.Column="1"
                    Height="23"
                    Text="{Binding Categoria.Nome, Mode=TwoWay}"
                    VerticalAlignment="Center"
                    Width="140"/>
            </Grid>

            <ToolBar
                ToolBarTray.IsLocked="True">
                <Button Command="{Binding NuovoCommand}">
                    <TextBlock>
                        <Run Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Nuova"/>
                    </TextBlock>
                </Button>
                <Button Command="{Binding ModificaCategoriaCommand}">
                    <TextBlock>
                        <Run Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Modifica"/>
                    </TextBlock>
                </Button>
                <Button Command="{Binding SalvaCommand}">
                    <TextBlock>
                        <Run Text="&#xE74E;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Salva"/>
                    </TextBlock>
                </Button>
                <Button Command="{Binding RimuoviCommand, Mode=OneWay}">
                    <TextBlock>
                        <Run Text="&#xE74D;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Elimina" />
                    </TextBlock>
                </Button>
                <Button Command="{Binding AnnullaModificheCategoriaCommand}">
                    <TextBlock>
                        <Run Text="&#xE711;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Annulla"/>
                    </TextBlock>
                </Button>
            </ToolBar>

        </DockPanel>


        <GroupBox Grid.Row="1" Header="Categorie">

            <ListView
                ItemsSource="{Binding Categorie, Mode=OneWay}"
                SelectionMode="Single"
                SelectedItem="{Binding CategoriaSelezionata, Mode=OneWayToSource}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Nome}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDoubleClick">
                        <b:InvokeCommandAction Command="{Binding SelezionaCategoriaCommand, Mode=OneWay}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </ListView>

        </GroupBox>

    </Grid>

</Page>
