<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="av"
        x:Class="CiccioGest.Presentation.WpfApp.Test.FatturaView"
        Title="Gestione Fattura"
        Width="800"
        Height="450"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Toolbar -->
            <RowDefinition Height="Auto" />
            <!-- Dati fattura -->
            <RowDefinition Height="Auto" />
            <!-- Dettaglio corrente -->
            <RowDefinition Height="*" />
            <!-- Lista dettagli -->
        </Grid.RowDefinitions>

        <!-- ========================================================= -->
        <!-- TOOLBAR  -->
        <!-- ========================================================= -->
        <ToolBar Grid.Row="0"
                 Background="#E6E6E6"
                 Padding="4">
            <Button Content="Nuova Fattura"
                    Width="110"
                    Margin="3" />
            <Button Content="Salva Fattura"
                    Width="110"
                    Margin="3" />
            <Separator />
            <Button Content="Apri Fattura"
                    Width="110"
                    Margin="3" />
            <Button Content="Elimina Fattura"
                    Width="110"
                    Margin="3" />
            <Separator />
            <Button Content="Nuovo Dettaglio"
                    Width="110"
                    Margin="3" />
            <Button Content="Aggiungi Dettaglio"
                    Width="110"
                    Margin="3" />
            <Button Content="Elimina Dettaglio"
                    Width="110"
                    Margin="3" />
        </ToolBar>

        <!-- ========================================================= -->
        <!-- DATI FATTURA  -->
        <!-- ========================================================= -->
        <GroupBox Grid.Row="1"
                  Header="Dati Fattura"
                  Margin="0,8,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="ID Fattura:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Column="1"
                         Margin="4,0" />

                <TextBlock Text="Cliente:"
                           Grid.Column="2"
                           VerticalAlignment="Center" />
                <DockPanel Grid.Column="3">
                    <TextBox Width="150"
                             Margin="4,0" />
                    <Button Content="..."
                            Width="30"
                            Margin="4,0" />
                </DockPanel>

                <TextBlock Text="Totale:"
                           Grid.Column="0"
                           Grid.Row="1"
                           Margin="0,10,0,0" />
                <TextBox Grid.Column="1"
                         Grid.Row="1"
                         Margin="4,10,0,0" />
            </Grid>
        </GroupBox>

        <!-- ========================================================= -->
        <!-- DETTAGLIO CORRENTE  -->
        <!-- ========================================================= -->
        <GroupBox Grid.Row="2"
                  Header="Dettaglio Corrente"
                  Margin="0,8,0,0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Articolo:"
                           VerticalAlignment="Center" />
                <DockPanel Grid.Column="1">
                    <TextBox Width="150"
                             Margin="4,0" />
                    <Button Content="..."
                            Width="30"
                            Margin="4,0" />
                </DockPanel>

                <TextBlock Text="Quantità:"
                           Grid.Column="2"
                           VerticalAlignment="Center" />
                <TextBox Grid.Column="3"
                         Margin="4,0" />

                <TextBlock Text="Prezzo:"
                           Grid.Column="0"
                           Grid.Row="1"
                           Margin="0,10,0,0" />
                <TextBox Grid.Column="1"
                         Grid.Row="1"
                         Margin="4,10,0,0" />

                <TextBlock Text="Totale:"
                           Grid.Column="2"
                           Grid.Row="1"
                           Margin="0,10,0,0" />
                <TextBox Grid.Column="3"
                         Grid.Row="1"
                         Margin="4,10,0,0" />
            </Grid>
        </GroupBox>

        <!-- ========================================================= -->
        <!-- LISTA DETTAGLI  -->
        <!-- ========================================================= -->
        <GroupBox Grid.Row="3"
                  Header="Dettagli Fattura"
                  Margin="0,8,0,0">
            <DataGrid Margin="10"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID"
                                        Binding="{Binding Id}"
                                        Width="50" />
                    <DataGridTextColumn Header="Articolo"
                                        Binding="{Binding NomeArticolo}"
                                        Width="*" />
                    <DataGridTextColumn Header="Qtà"
                                        Binding="{Binding Quantità}"
                                        Width="60" />
                    <DataGridTextColumn Header="Prezzo"
                                        Binding="{Binding Prezzo}"
                                        Width="80" />
                    <DataGridTextColumn Header="Totale"
                                        Binding="{Binding Totale}"
                                        Width="80" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</Window>
