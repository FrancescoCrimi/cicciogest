<Window x:Class="CiccioGest.Presentation.WpfApp.Test.ArticoloView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CiccioGest.Presentation.WpfApp.Test"
        mc:Ignorable="d"
        Title="Gestione Articolo"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>

        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="#0078D7" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Padding"
                    Value="8,4" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>

        <Style x:Key="PageTitleStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="24" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#333" />
        </Style>

    </Window.Resources>

    <Grid Margin="20">

        <!-- Layout principale -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Titolo -->
            <RowDefinition Height="*" />
            <!-- Form + Lista -->
            <RowDefinition Height="Auto" />
            <!-- Pulsanti -->
        </Grid.RowDefinitions>

        <!-- ======================= -->
        <!--       TITOLO PAGINA     -->
        <!-- ======================= -->

        <TextBlock Text="Gestione Articolo"
                   Style="{StaticResource PageTitleStyle}"
                   Margin="0,0,0,20" />

        <!-- ======================= -->
        <!--   FORM + LISTA CAT      -->
        <!-- ======================= -->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- ===================== -->
            <!--   FORM ARTICOLO       -->
            <!-- ===================== -->
            <StackPanel Grid.Column="0"
                        Margin="0,0,20,0">

                <!-- Nome -->
                <TextBlock Text="Nome Articolo"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding Nome}"
                         Margin="0,5,0,15" />

                <!-- Prezzo -->
                <TextBlock Text="Prezzo (in €)"
                           FontWeight="SemiBold" />
                <TextBox Text="{Binding Prezzo}"
                         Margin="0,5,0,15" />

                <!-- Fornitore -->
                <TextBlock Text="Fornitore"
                           FontWeight="SemiBold" />
                <StackPanel Orientation="Horizontal"
                            Margin="0,5,0,15">
                    <TextBox Text="{Binding NomeFornitore}"
                             Width="180" />
                    <Button Content="..."
                            Width="30"
                            Margin="10,0,0,0"
                            Padding="0"
                            ToolTip="Seleziona Fornitore"
                            Command="{Binding SelezionaFornitoreCommand}" />
                </StackPanel>

            </StackPanel>

            <!-- ===================== -->
            <!--     LISTA CATEGORIE   -->
            <!-- ===================== -->
            <StackPanel Grid.Column="1">

                <TextBlock Text="Categorie Associate"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10" />

                <DataGrid ItemsSource="{Binding Categorie}"
                          SelectedItem="{Binding CategoriaSelezionata}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          Height="250"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          Margin="0,0,0,10">

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding Id}"
                                            Width="50" />

                        <DataGridTextColumn Header="Nome Categoria"
                                            Binding="{Binding Nome}"
                                            Width="*" />

                    </DataGrid.Columns>

                </DataGrid>

                <!-- Pulsanti categorie -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <Button Content="Aggiungi Categoria"
                            Width="150"
                            Margin="0,0,10,0"
                            Command="{Binding AggiungiCategoriaCommand}" />

                    <Button Content="Rimuovi Categoria"
                            Width="150"
                            Command="{Binding RimuoviCategoriaCommand}" />
                </StackPanel>
            </StackPanel>

        </Grid>

        <!-- ======================= -->
        <!--       PULSANTI CRUD     -->
        <!-- ======================= -->

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">

            <Button Content="Nuovo"
                    Width="100"
                    Command="{Binding NuovoCommand}"
                    Margin="0,0,10,0" />
            <Button Content="Apri"
                    Width="100"
                    Command="{Binding ApriCommand}"
                    Margin="0,0,10,0" />
            <Button Content="Salva"
                    Width="100"
                    Command="{Binding SalvaCommand}"
                    Margin="0,0,10,0" />
            <Button Content="Elimina"
                    Width="100"
                    Command="{Binding EliminaCommand}" />
        </StackPanel>

    </Grid>

</Window>

