<Window x:Class="CiccioGest.Presentation.WpfApp.Test.ClienteView2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CiccioGest.Presentation.WpfApp.Test"
        mc:Ignorable="d"
        Title="Gestione Cliente"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F7FA"
        FontFamily="Segoe UI"
        FontSize="14">
    <!-- Background="{StaticResource WindowBackgroundBrush}" -->

    <Window.Resources>

        <SolidColorBrush x:Key="WindowBackgroundBrush"
                         Color="#F5F7FA" />
        <SolidColorBrush x:Key="PanelBackgroundBrush"
                         Color="White" />
        <SolidColorBrush x:Key="BorderBrush"
                         Color="#D0D0D0" />

        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="4" />
            <Setter Property="Padding"
                    Value="6,3" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background"
                    Value="#0078D7" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Padding"
                    Value="8,4" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Cursor"
                    Value="Hand" />
        </Style>

        <Style x:Key="PageTitleStyle"
               TargetType="TextBlock">
            <Setter Property="FontSize"
                    Value="20" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="Foreground"
                    Value="#333" />
        </Style>

    </Window.Resources>

    <Grid Margin="20">

        <!-- Layout principale -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Barra titolo -->
            <RowDefinition Height="*" />
            <!-- Contenuto -->
            <RowDefinition Height="Auto" />
            <!-- Barra comandi -->
        </Grid.RowDefinitions>

        <!-- ======================= -->
        <!-- 🔹 Titolo -->
        <!-- ======================= -->

        <TextBlock Text="Gestione Cliente"
                   Style="{StaticResource PageTitleStyle}"
                   Margin="0,0,0,10" />

        <!-- ======================= -->
        <!-- 🔹 Corpo principale -->
        <!-- ======================= -->

        <Border Grid.Row="1"
                Padding="20"
                CornerRadius="5"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 🔸 Dati Cliente -->
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Text="Nome:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Text="{Binding Cliente.Nome, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Cognome:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Text="{Binding Cliente.Cognome, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Text="Codice Fiscale:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Text="{Binding Cliente.CodiceFiscale, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Text="Telefono:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="3"
                         Grid.Column="1"
                         Text="{Binding Cliente.Telefono, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Text="Email:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Text="{Binding Cliente.Email, UpdateSourceTrigger=PropertyChanged}" />

                <!-- 🔹 Separatore -->
                <Separator Grid.Row="5"
                           Grid.ColumnSpan="2"
                           Margin="0,10" />

                <!-- 🔸 Indirizzo -->
                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           Text="Via:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="6"
                         Grid.Column="1"
                         Text="{Binding Cliente.Indirizzo.Via, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="7"
                           Grid.Column="0"
                           Text="Civico:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="7"
                         Grid.Column="1"
                         Text="{Binding Cliente.Indirizzo.Civico, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="8"
                           Grid.Column="0"
                           Text="CAP:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="8"
                         Grid.Column="1"
                         Text="{Binding Cliente.Indirizzo.CAP, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Text="Città:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="9"
                         Grid.Column="1"
                         Text="{Binding Cliente.Indirizzo.Citta, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="10"
                           Grid.Column="0"
                           Text="Stato:"
                           VerticalAlignment="Center" />
                <TextBox Grid.Row="10"
                         Grid.Column="1"
                         Text="{Binding Cliente.Indirizzo.Stato, UpdateSourceTrigger=PropertyChanged}" />

            </Grid>
        </Border>

        <!-- ======================= -->
        <!-- 🔹 Barra dei comandi -->
        <!-- ======================= -->

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Nuovo"
                    Width="100"
                    Command="{Binding NuovoCommand}"
                    Margin="0,0,10,0" />
            <Button Content="Apri"
                    Width="100"
                    Command="{Binding ApriCommand}"
                    Margin="0,0,10,0" />
            <Button Content="Salva"
                    Width="100"
                    Command="{Binding SalvaCommand}"
                    Margin="0,0,10,0" />
            <Button Content="Elimina"
                    Width="100"
                    Command="{Binding EliminaCommand}" />
        </StackPanel>

    </Grid>

</Window>
