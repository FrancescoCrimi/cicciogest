<UserControl x:Class="CiccioGest.Presentation.WpfApp.Views.ArticoliView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CiccioGest.Presentation.WpfApp.Views"
             mc:Ignorable="d"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewmodel="clr-namespace:CiccioGest.Presentation.Mvvm.ViewModels;assembly=CiccioGest.Presentation.Mvvm"
             xmlns:usercontrols="clr-namespace:CiccioGest.Presentation.WpfBackend.UserControls;assembly=WpfBackend"
             d:DataContext="{d:DesignInstance Type=viewmodel:ArticoliViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#FFF7F7F7">
    <!--
      Title="Articoli"
    -->

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, Mode=OneWay}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding UnloadedCommand, Mode=OneWay}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="{StaticResource SmallLeftRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">

            <TextBlock Text="Articoli"
                       DockPanel.Dock="Left"
                       Margin="{StaticResource SmallLeftTopRightBottomMargin}"
                       Style="{StaticResource PageTitleStyle}" />

            <Grid DockPanel.Dock="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Label Content="Cerca"
                       VerticalAlignment="Center" />
                <TextBox Grid.Column="1"
                         Height="23"
                         Width="140"
                         VerticalContentAlignment="Center" />
            </Grid>

            <ToolBar ToolBarTray.IsLocked="True">
                <Button Command="{Binding AggiornaCommand}"
                        Margin="8,0,8,0">
                    <TextBlock>        
                        <Run Text="&#xE72C;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Aggiorna" />
                    </TextBlock>
                </Button>
                <Button Command="{Binding ConfermaCommand}"
                        Margin="8,0,8,0">
                    <TextBlock>        
                        <Run Text="&#xE10B;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Conferma" />
                    </TextBlock>
                </Button>
                <Button Command="{Binding AnnullaCommand}"
                        Margin="8,0,8,0">
                    <TextBlock>        
                        <Run Text="&#xE10A;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Annulla" />
                    </TextBlock>
                </Button>
            </ToolBar>

        </DockPanel>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="6"
                Padding="12"
                BorderBrush="#FFE5E5E5"
                BorderThickness="1">
            <usercontrols:ListaArticoliControl />
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="2"
              Margin="0,0,0,0">
            <TextBlock VerticalAlignment="Center"
                       Foreground="#666"
                       Text="{Binding StatusMessage}" />
        </Grid>

    </Grid>

</UserControl>
