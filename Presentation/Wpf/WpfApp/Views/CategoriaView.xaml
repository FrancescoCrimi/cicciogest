<UserControl x:Class="CiccioGest.Presentation.WpfApp.Views.CategoriaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CiccioGest.Presentation.WpfApp.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewmodel="clr-namespace:CiccioGest.Presentation.Mvvm.ViewModels;assembly=CiccioGest.Presentation.Mvvm"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodel:CategoriaViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="#FFF7F7F7">
    <!--
      Title="Categoria"
    -->

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, Mode=OneWay}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Unloaded">
            <i:InvokeCommandAction Command="{Binding UnloadedCommand, Mode=OneWay}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid Margin="{StaticResource XSmallLeftRightBottomMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- toolbar -->
            <RowDefinition Height="Auto" />
            <!-- editor corrente -->
            <RowDefinition Height="*" />
            <!-- lista -->
            <RowDefinition Height="Auto" />
            <!-- footer -->
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <DockPanel Grid.Row="0">

            <TextBlock Text="Categorie"
                       DockPanel.Dock="Left"
                       Margin="{StaticResource SmallLeftTopRightBottomMargin}"
                       Style="{StaticResource PageTitleStyle}" />


            <!-- Ricerca -->
            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Right">
                <Label Content="Cerca"
                       VerticalAlignment="Center" />

                <!--Style="{StaticResource TextBoxStyle}"-->
                <TextBox Width="140"
                         VerticalAlignment="Center"
                         Text="{Binding FiltroCategorie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <ToolBar ToolBarTray.IsLocked="True"
                     OverflowMode="Never">
                <Button Margin="8,0,8,0"
                        Command="{Binding NuovaCategoriaCommand, Mode=OneWay}">
                    <TextBlock>
                        <Run Text="&#xE8A5;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Nuova" />
                    </TextBlock>
                </Button>
                <!--<Button Margin="8,0,8,0"
                        Command="{Binding ModificaCategoriaCommand}">
                    <TextBlock>
                        <Run Text="&#xE70F;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Modifica" />
                    </TextBlock>
                </Button>-->
                <Button Margin="8,0,8,0"
                        Command="{Binding SalvaCategoriaCommand, Mode=OneWay}">
                    <TextBlock>
                        <Run Text="&#xE74E;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Salva" />
                    </TextBlock>
                </Button>
                <Button Margin="8,0,8,0"
                        Command="{Binding EliminaCategoriaCommand, Mode=OneWay}">
                    <TextBlock>
                        <Run Text="&#xE74D;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Elimina" />
                    </TextBlock>
                </Button>
                <!--<Button Margin="8,0,8,0"
                        Command="{Binding AnnullaModificheCategoriaCommand}">
                    <TextBlock>
                        <Run Text="&#xE711;"
                             FontFamily="Segoe MDL2 Assets" />
                        <Run Text="Annulla" />
                    </TextBlock>
                </Button>-->
            </ToolBar>

        </DockPanel>

        <!-- Editor corrente -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="6"
                Padding="12"
                BorderBrush="#FFE5E5E5"
                BorderThickness="1"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--Style="{StaticResource HeaderText}"-->
                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="Categoria Corrente"
                           Margin="0,0,0,12" />

                <!-- Campo ID spostato a destra -->
                <StackPanel Grid.Row="0"
                            Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="20,0,0,0">
                    <TextBlock VerticalAlignment="Center"
                               Foreground="#666"
                               Margin="0,0,8,0"
                               Text="ID:" />
                    <TextBlock VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Text="{Binding CategoriaCorrente.Id}" />
                </StackPanel>

                <!--Style="{StaticResource LabelStyle}"-->
                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Text="Nome:" />

                <!--Style="{StaticResource TextBoxStyle}"-->
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Text="{Binding CategoriaCorrente.Nome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Border>

        <!-- Lista categorie -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="6"
                Padding="12"
                BorderBrush="#FFE5E5E5"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--Style="{StaticResource HeaderText}"-->
                <TextBlock Grid.Row="0"
                           Text="Lista Categorie"
                           Margin="0,0,0,12" />

                <ListView Grid.Row="1"
                          ItemsSource="{Binding Categorie, Mode=OneWay}"
                          SelectionMode="Single"
                          SelectedItem="{Binding CategoriaSelezionata}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Nome}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding SelezionaCategoriaCommand, Mode=OneWay}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListView>
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="3"
              Margin="0,10,0,0">
            <TextBlock VerticalAlignment="Center"
                       Foreground="#666"
                       Text="{Binding StatusMessage}" />
        </Grid>
    </Grid>

</UserControl>
