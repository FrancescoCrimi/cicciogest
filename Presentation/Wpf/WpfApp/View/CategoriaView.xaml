<Page x:Class="CiccioGest.Presentation.WpfApp.View.CategoriaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Categoria"
      Background="White">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand, Mode=OneWay}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid
        Margin="{StaticResource SmallLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="68" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">

            <TextBlock
                Text="Categoria"
                DockPanel.Dock="Left"
                Margin="{StaticResource SmallLeftMargin}"
                Style="{StaticResource PageTitleStyle}"/>

            <Grid
                DockPanel.Dock="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Cerca Categoria:" Margin="3" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Height="23" Margin="3" VerticalAlignment="Center" Width="120"/>
            </Grid>

            <ToolBar
                x:Name="toolBar1"
                ToolBarTray.IsLocked="True"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Width="Auto"
                Height="Auto">
                <Button>
                    <TextBlock>
                        <Run Text="&#xe8fb;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Seleziona Categoria"/>
                    </TextBlock>
                </Button>
                <Button Content="?"/>
            </ToolBar>

        </DockPanel>


        <GroupBox Grid.Row="1" Header="Modifica Categoria">
            <ToolBar ToolBarTray.IsLocked="True">
                <Button>
                    <TextBlock>
                        <Run Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Nuova"/>
                    </TextBlock>
                </Button>
                <Button>
                    <TextBlock>
                        <Run Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Modifica"/>
                    </TextBlock>
                </Button>
                <Button>
                    <TextBlock>
                        <Run Text="&#xE74E;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Salva"/>
                    </TextBlock>
                </Button>
                <Button>
                    <TextBlock>
                        <Run Text="&#xE72C;" FontFamily="Segoe MDL2 Assets"/>
                        <Run Text="Aggiorna"/>
                    </TextBlock>
                </Button>

                <Label Content="Label" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox HorizontalAlignment="Left" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" VerticalContentAlignment="Center"/>
            </ToolBar>
        </GroupBox>


        <GroupBox Grid.Row="2" Header="Categorie">
            <DataGrid
                ItemsSource="{Binding Categorie}"
                SelectedItem="{Binding CategoriaSelezionata, Mode=OneWayToSource}"
                SelectionMode="Single"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                VerticalContentAlignment="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="nomeColumn" Binding="{Binding Nome}" Header="Nome" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

    </Grid>
</Page>
