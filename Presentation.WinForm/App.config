<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <configSections>
    <section name="DddTest" type="Ciccio1.Infrastructure.Conf.DddTestConfigurationSection, Infrastructure" />
    <!--<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />-->
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <DddTest>
    <Confs default="db4o">
      <Conf name="mysql" user_interface="Form" data_access="NHibernate">
        <data_access_config database="MySql" cs="server=localhost;User Id=dddtest;password=dddtest;database=ciccio1" />
      </Conf>
      <Conf name="ssee1" user_interface="Form" data_access="NHibernate">
        <data_access_config database="SSEE" cs="Data Source=FRANCESCO-PC\SQLEXPRESS;Initial Catalog=test;Integrated Security=True" />
      </Conf>
      <Conf name="ssee2" user_interface="Form" data_access="NHibernate">
        <data_access_config database="SSEE" cs="Data Source=(LocalDB)\MSSQLLocalDB;AttachDbFilename=|DataDirectory|\DddTest.mdf;Integrated Security=True" />
      </Conf>
      <Conf name="ssce" user_interface="Form" data_access="NHibernate">
        <data_access_config database="SSCE" cs="Data Source=DddTest.sdf" />
      </Conf>
      <Conf name="ssce2" user_interface="Form" data_access="NHibernate">
        <data_access_config database="SSCE" cs="Data Source=Ciccio1.sdf" />
      </Conf>
      <Conf name="sqlite" user_interface="Form" data_access="NHibernate">
        <!--<data_access_config database="SQLite" cs="Data Source=DddTest.db;Version=3;Default IsolationLevel=ReadCommitted;BinaryGuid=False" />-->
        <data_access_config database="SQLite" cs="Data Source=DddTest.db;Version=3;BinaryGuid=False" />
      </Conf>
      <Conf name="db4o" user_interface="Form" data_access="Db4o">
        <data_access_config database="MySql" cs="Ciccio1.db4o" />
      </Conf>
      <Conf name="wcf" user_interface="Form" data_access="WCF">
        <data_access_config database="MySql" cs="http://localhost:8000" />
      </Conf>
      <Conf name="rest1" user_interface="Form" data_access="REST">
        <data_access_config database="MySql" cs="http://localhost:8732/RestService/rest" />
      </Conf>
      <Conf name="rest2" user_interface="Form" data_access="REST">
        <!--<data_access_config database="MySql" cs="http://localhost.fiddler:31292/" />-->
        <data_access_config database="MySql" cs="http://localhost:31292/" />
      </Conf>
    </Confs>
  </DddTest>

