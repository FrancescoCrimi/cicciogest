<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping assembly="Domain"
                   namespace="Ciccio1.Domain"
                   xmlns="urn:nhibernate-mapping-2.2">

  <class name="Fattura" table="Fattura">

    <id name="Id" generator="native" unsaved-value="0"/>
    <property name="IdFattura" not-null="true" unique="true" />
    <property name="Nome" not-null="true" />

    <bag name="Dettagli" lazy="false" generic="true" access="field.camelcase" cascade="all-delete-orphan" >
      <key column="Fattura_Id" not-null="true"/>
      <one-to-many class="Dettaglio"/>
    </bag>
    
    <!--<list name="Dettagli" lazy="false" generic="true" access="field.camelcase" cascade="all-delete-orphan" >
